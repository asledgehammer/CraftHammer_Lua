{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "media/lua",
        "target": "esnext",
        "lib": ["esnext"],
        "moduleResolution": "node",
        "types": [],
        "strict": true,
      },
      "tstl": {
        "luaTarget": "5.1",
        "noHeader": true,
        "luaLibImport": "inline"
      },
      "include": ["src/**/*.ts", "src/**/*.json"],
      "exclude": ["node_modules"]
}